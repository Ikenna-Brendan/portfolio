{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/uploads/(.*)",
      "dest": "/public/uploads/$1"
    },
    {
      "src": "/data/(.*)",
      "dest": "/data/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/upload/route.js": {
      "includeFiles": "public/uploads/**"
    },
    "api/contact.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://your-domain.vercel.app"
  }
} 